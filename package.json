{
    "name": "@hmake98/nestjs-mcp",
    "version": "1.0.3",
    "description": "NestJS package for integrating MCP (Model Context Protocol) servers",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": {
        "nestjs-mcp": "./bin/cli.js"
    },
    "scripts": {
        "build": "rimraf dist && tsc -p tsconfig.json && npm run copy-views",
        "copy-views": "mkdir -p dist/views && cp src/views/*.html dist/views/",
        "clean": "rimraf dist",
        "prebuild": "npm run clean && npm run fix-all",
        "type-check": "tsc --noEmit",
        "fix-all": "npm run format && npm run lint",
        "test": "jest --coverage --passWithNoTests --forceExit",
        "test:unit": "jest --testPathPattern=test/.*.spec.ts --coverage --passWithNoTests --forceExit",
        "test:integration": "jest --testPathPattern=test/.*integration.spec.ts --coverage --passWithNoTests --forceExit",
        "test:ci": "jest --coverage --passWithNoTests --forceExit --ci",
        "make-badges": "istanbul-badges-readme",
        "lint": "eslint \"{src,test}/**/*.ts\" --fix",
        "lint:check": "eslint \"{src,test}/**/*.ts\"",
        "format": "prettier --write \"src/**/*.ts\"",
        "format:check": "prettier --check \"src/**/*.ts\"",
        "update:packages": "npx npm-check-updates -u",
        "docs:generate": "typedoc --options typedoc.json",
        "docs:serve": "npx http-server docs -p 3001 -o",
        "docs:clean": "rimraf docs",
        "docs:build": "npm run docs:clean && npm run docs:generate",
        "docs:watch": "typedoc --options typedoc.json --watch",
        "prepare": "husky",
        "prepublishOnly": "npm run build"
    },
    "keywords": [
        "nestjs",
        "mcp",
        "model-context-protocol",
        "server",
        "wrapper",
        "decorator"
    ],
    "author": "hmake98",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/hmake98/nestjs-mcp.git"
    },
    "bugs": {
        "url": "https://github.com/hmake98/nestjs-mcp/issues"
    },
    "homepage": "https://github.com/hmake98/nestjs-mcp#readme",
    "publishConfig": {
        "access": "public"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.21.1",
        "axios": "^1.13.2",
        "commander": "^14.0.2",
        "zod": "^3.25.76"
    },
    "peerDependencies": {
        "@nestjs/common": "^10.0.0",
        "@nestjs/core": "^10.0.0",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.8.0"
    },
    "peerDependenciesMeta": {
        "@grpc/grpc-js": {
            "optional": true
        },
        "@grpc/proto-loader": {
            "optional": true
        },
        "ioredis": {
            "optional": true
        },
        "ws": {
            "optional": true
        }
    },
    "devDependencies": {
        "@commitlint/cli": "^19.5.0",
        "@commitlint/config-conventional": "^19.5.0",
        "@grpc/grpc-js": "^1.14.1",
        "@grpc/proto-loader": "^0.8.0",
        "@nestjs/common": "^10.3.0",
        "@nestjs/core": "^10.3.0",
        "@nestjs/platform-express": "^10.4.20",
        "@nestjs/testing": "^10.3.0",
        "@semantic-release/commit-analyzer": "^13.0.0",
        "@semantic-release/github": "^11.0.0",
        "@semantic-release/npm": "^12.0.1",
        "@semantic-release/release-notes-generator": "^14.0.1",
        "@types/express": "^5.0.5",
        "@types/jest": "^29.5.11",
        "@types/node": "^24.10.1",
        "@types/supertest": "^6.0.3",
        "@types/ws": "^8.18.1",
        "@typescript-eslint/eslint-plugin": "^8.15.0",
        "@typescript-eslint/parser": "^8.15.0",
        "conventional-changelog-conventionalcommits": "^8.0.0",
        "eslint": "^9.15.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "husky": "^9.1.7",
        "ioredis": "^5.8.2",
        "istanbul-badges-readme": "^1.9.0",
        "jest": "^29.7.0",
        "lint-staged": "^15.2.10",
        "prettier": "^3.3.3",
        "reflect-metadata": "^0.1.14",
        "rimraf": "^6.1.0",
        "rxjs": "^7.8.1",
        "semantic-release": "^24.2.0",
        "supertest": "^7.1.4",
        "ts-jest": "^29.1.1",
        "typedoc": "^0.28.14",
        "typedoc-plugin-markdown": "^4.9.0",
        "typedoc-plugin-mermaid": "^1.12.0",
        "typescript": "^5.7.2",
        "ws": "^8.18.0"
    },
    "lint-staged": {
        "*.ts": [
            "eslint --fix",
            "prettier --write"
        ]
    }
}
