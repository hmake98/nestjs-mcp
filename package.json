{
    "name": "nestjs-mcp",
    "version": "0.1.0",
    "description": "NestJS package for integrating MCP (Model Context Protocol) servers",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "rimraf dist && tsc -p tsconfig.json",
        "clean": "rimraf dist",
        "version": "npm run fix-all && git add -A src",
        "postversion": "git push && git push --tags",
        "prebuild": "npm run clean && npm run fix-all",
        "publish:major": "npm version major && npm publish",
        "publish:minor": "npm version minor && npm publish",
        "publish:patch": "npm version patch && npm publish",
        "type-check": "tsc --noEmit",
        "fix-all": "npm run format && npm run lint",
        "test": "jest --coverage --passWithNoTests --forceExit",
        "test:ci": "npm run test:unit && npm run test:integration",
        "make-badges": "istanbul-badges-readme",
        "lint": "eslint \"{src,test}/**/*.ts\" --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "update:packages": "npx npm-check-updates -u",
        "docs:generate": "typedoc src --out docs --excludePrivate --excludeProtected",
        "docs:serve": "npx http-server docs -p 3001 -o",
        "docs:clean": "rimraf docs",
        "prepare": "husky",
        "prepublishOnly": "npm run build"
    },
    "keywords": [
        "nestjs",
        "mcp",
        "model-context-protocol",
        "server",
        "wrapper",
        "decorator"
    ],
    "author": "hmake98",
    "license": "MIT",
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.21.1"
    },
    "peerDependencies": {
        "@nestjs/common": "^10.0.0",
        "@nestjs/core": "^10.0.0",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.8.0"
    },
    "devDependencies": {
        "@nestjs/common": "^10.3.0",
        "@nestjs/core": "^10.3.0",
        "@nestjs/testing": "^10.3.0",
        "@types/jest": "^29.5.11",
        "@types/node": "^22.0.0",
        "@typescript-eslint/eslint-plugin": "^8.15.0",
        "@typescript-eslint/parser": "^8.15.0",
        "eslint": "^9.15.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "lint-staged": "^15.2.10",
        "prettier": "^3.3.3",
        "reflect-metadata": "^0.1.14",
        "rimraf": "^6.1.0",
        "rxjs": "^7.8.1",
        "ts-jest": "^29.1.1",
        "typescript": "^5.7.2"
    },
    "lint-staged": {
        "*.ts": [
            "eslint --fix",
            "prettier --write"
        ]
    }
}
